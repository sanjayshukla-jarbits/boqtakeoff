<Window x:Class="boqtakeoff.ui.Windows.DrawingScheduleWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drawing Schedule"
        Height="700" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

	<Window.Resources>
		<!-- Header Style -->
		<Style x:Key="HeaderTextStyle" TargetType="TextBlock">
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Foreground" Value="#333333"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Margin" Value="5,0"/>
		</Style>

		<!-- DataGrid Style -->
		<Style x:Key="DataGridStyle" TargetType="DataGrid">
			<Setter Property="AutoGenerateColumns" Value="False"/>
			<Setter Property="CanUserAddRows" Value="False"/>
			<Setter Property="CanUserDeleteRows" Value="False"/>
			<Setter Property="IsReadOnly" Value="True"/>
			<Setter Property="SelectionMode" Value="Single"/>
			<Setter Property="GridLinesVisibility" Value="All"/>
			<Setter Property="HeadersVisibility" Value="Column"/>
			<Setter Property="BorderBrush" Value="#CCCCCC"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="RowHeight" Value="35"/>
			<Setter Property="FontSize" Value="11"/>
			<Setter Property="Background" Value="White"/>
		</Style>

		<!-- Column Header Style -->
		<Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
			<Setter Property="Background" Value="#E8E8E8"/>
			<Setter Property="Foreground" Value="#333333"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="FontSize" Value="11"/>
			<Setter Property="Padding" Value="8,5"/>
			<Setter Property="BorderBrush" Value="#CCCCCC"/>
			<Setter Property="BorderThickness" Value="0,0,1,1"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
		</Style>

		<!-- Cell Style -->
		<Style x:Key="CellStyle" TargetType="DataGridCell">
			<Setter Property="Padding" Value="8,5"/>
			<Setter Property="BorderBrush" Value="#E0E0E0"/>
			<Setter Property="BorderThickness" Value="0,0,1,1"/>
			<Style.Triggers>
				<Trigger Property="IsSelected" Value="True">
					<Setter Property="Background" Value="#E3F2FD"/>
					<Setter Property="Foreground" Value="#000000"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Title Bar -->
		<Border Grid.Row="0"
                Background="#C62828"
                Padding="15,10"
                Margin="0,0,0,10">
			<TextBlock Text="Drawing Schedule"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
		</Border>

		<!-- Toolbar -->
		<Border Grid.Row="1"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="10"
                Margin="0,0,0,10">
			<StackPanel Orientation="Horizontal">
				<Button x:Name="btnRefresh"
                        Content="Refresh"
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="BtnRefresh_Click"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
				<Button x:Name="btnExport"
                        Content="Export to Excel"
                        Width="120"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="BtnExport_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
				<TextBlock Text="Total Records: "
                           VerticalAlignment="Center"
                           Margin="20,0,5,0"
                           FontWeight="SemiBold"/>
				<TextBlock x:Name="txtRecordCount"
                           Text="0"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#2196F3"/>
			</StackPanel>
		</Border>

		<!-- DataGrid -->
		<DataGrid x:Name="dgDrawingSchedule"
                  Grid.Row="2"
                  Style="{StaticResource DataGridStyle}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                  CellStyle="{StaticResource CellStyle}">
			<DataGrid.Columns>
				<!-- Drawing Number -->
				<DataGridTextColumn Header="Drawing Number"
                                    Binding="{Binding Drawing_Number}"
                                    Width="120"/>

				<!-- Action -->
				<DataGridTextColumn Header="Action"
                                    Binding="{Binding action_field}"
                                    Width="180"/>

				<!-- Description (Missing in original screen) -->
				<DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}"
                                    Width="200"/>

				<!-- Project Specificity -->
				<DataGridTextColumn Header="Project Specificity"
                                    Binding="{Binding Project_Specificity}"
                                    Width="150"/>

				<!-- Planned Start Date -->
				<DataGridTextColumn Header="Planned Start Date"
                                    Binding="{Binding Planned_Start_Date}"
                                    Width="130"/>

				<!-- Upload Due Date -->
				<DataGridTextColumn Header="Upload Due Date"
                                    Binding="{Binding Upload_Due_date}"
                                    Width="130"/>

				<!-- Progress -->
				<DataGridTextColumn Header="Progress"
                                    Binding="{Binding Progress}"
                                    Width="100"/>

				<!-- Digital Designer Name -->
				<DataGridTextColumn Header="Digital Designer Name"
                                    Binding="{Binding Digital_Designer_Name}"
                                    Width="180"/>

				<!-- Drawing File -->
				<DataGridTextColumn Header="Drawing File"
                                    Binding="{Binding Design_File}"
                                    Width="150"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Status Bar -->
		<Border Grid.Row="3"
                Background="#F5F5F5"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,0">
			<StackPanel Orientation="Horizontal">
				<TextBlock x:Name="txtStatus"
                           Text="Ready"
                           VerticalAlignment="Center"
                           Foreground="#666666"/>
				<ProgressBar x:Name="progressBar"
                             Width="200"
                             Height="20"
                             Margin="20,0,0,0"
                             Visibility="Collapsed"/>
			</StackPanel>
		</Border>
	</Grid>
</Window>