<Window x:Class="boqtakeoff.ui.Views.FamilyUploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Upload Family to BIM Library" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <StackPanel>
                <TextBlock Text="Upload Family to BIM Library" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Upload and add Revit families to the cloud library" 
                          FontSize="12" 
                          Foreground="White" 
                          Opacity="0.9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Category TreeView -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                              Text="Categories" 
                              FontWeight="Bold" 
                              FontSize="14"
                              Padding="10"
                              Background="#FAFAFA"/>
                    
                    <TreeView x:Name="treeViewFolders"
                             ItemContainerStyle="{StaticResource TreeViewItemStyle}"
                             SelectedItemChanged="treeViewFolders_SelectedItemChanged"
                             BorderThickness="0">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“ " FontSize="14"/>
                                    <TextBlock Text="{Binding Name}" FontSize="12"/>
                                    <TextBlock Text="{Binding FileCount, StringFormat=' ({0})'}" 
                                              FontSize="11" 
                                              Foreground="Gray" 
                                              Margin="5,0,0,0"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Upload and Parameters Panel -->
            <Border Grid.Column="2" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                    <StackPanel>
                        <!-- Upload Button -->
                        <Button x:Name="btnUpload"
                               Height="50"
                               Margin="0,0,0,20"
                               Background="#4CAF50"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="btnUpload_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="â¬† " FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Click To Upload"/>
                            </StackPanel>
                        </Button>

                        <!-- Family Parameters Section -->
                        <TextBlock x:Name="txtParametersHeader"
                                  Text="Family Parameters:"
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Margin="0,0,0,10"
                                  Visibility="Collapsed"/>

                        <!-- Parameters Panel -->
                        <StackPanel x:Name="panelParameters" Visibility="Collapsed">
                            <!-- Parameters will be dynamically added here -->
                        </StackPanel>

                        <!-- Add New Parameter Button -->
                        <Button x:Name="btnAddNewParameter"
                               Content="Add New Button"
                               Height="35"
                               Margin="0,20,0,10"
                               Background="#757575"
                               Foreground="White"
                               FontSize="12"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="btnAddNewParameter_Click"
                               Visibility="Collapsed"/>

                        <!-- New Parameter Input Fields -->
                        <StackPanel x:Name="panelNewParameter" 
                                   Visibility="Collapsed"
                                   Margin="0,10,0,20">
                            <TextBlock Text="Parameter Name:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNewParameterName"
                                   Height="30"
                                   Padding="5"
                                   FontSize="12"
                                   Margin="0,0,0,10"
                                   BorderBrush="#BDBDBD"
                                   BorderThickness="1"
                                   TextChanged="NewParameter_TextChanged"/>
                            
                            <TextBlock Text="Parameter Value:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNewParameterValue"
                                   Height="30"
                                   Padding="5"
                                   FontSize="12"
                                   Margin="0,0,0,10"
                                   BorderBrush="#BDBDBD"
                                   BorderThickness="1"
                                   TextChanged="NewParameter_TextChanged"
                                   KeyDown="txtNewParameterValue_KeyDown"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Margin="0,20,0,0">
                            <Button x:Name="btnCancel"
                                   Content="Cancel"
                                   Width="100"
                                   Height="35"
                                   Margin="0,0,10,0"
                                   Background="#757575"
                                   Foreground="White"
                                   FontSize="12"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Click="btnCancel_Click"/>
                            
                            <Button x:Name="btnAddToLibrary"
                                   Content="Add To Library"
                                   Width="120"
                                   Height="35"
                                   Background="#4CAF50"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Click="btnAddToLibrary_Click"
                                   IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatusMessage" 
                          Grid.Column="0"
                          Text="Ready" 
                          VerticalAlignment="Center"
                          FontSize="11"
                          Foreground="Gray"/>

                <Button Grid.Column="1"
                       Content="Close" 
                       Width="80"
                       Height="25"
                       Background="#757575"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="btnClose_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>